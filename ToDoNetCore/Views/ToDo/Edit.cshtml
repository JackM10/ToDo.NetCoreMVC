@using ToDoNetCore.Models
@model ToDoNetCore.Models.ToDoModel

@{
	Layout = null;
}

<!DOCTYPE html>

@Html.ValidationMessage("ShortName", "", new {@class = "text-danger" })
<html>
<head>
	<meta name="viewport" content="width-device-width" />
	<title>.NET Core MVC - Edit</title>
	<link rel="stylesheet" href="~/css/site.css" />
	<link rel="stylesheet" href="~/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/bootstrap-theme.min.css" />
	<script src="~/js/jquery-1.11.3.min.js"></script>
	<script src="~/js/jquery.validate.min.js"></script>
	<script src="~/js/jquery.validate.unobtrusive.min.js"></script>
	
	<style>
		.mouseOverAndLeave {
			padding: 1px 0px;
			margin: 1px 0px;
		}
		.mouseOverAndLeave:hover  {
			background-color: red;
		}

	</style>
	<script>
		function onMouseOver(placeholder)
		{
			$(placeholder).css("background", "#e6f2ff");
		}
 
		function onMouseLeave(placeholder)
		{
			$(placeholder).css("background", "");
		}
 
		$(function ()
		{
			$(".mouseOverAndLeave").mouseover(function () { onMouseOver(this); })
			$(".mouseOverAndLeave").mouseleave(function () { onMouseLeave(this); })
		})
	</script>

</head>
<body>
<div>
	<form asp-action="Edit">  @*asp-action="Edit"*@
		<div class="form-horizontal">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<p>
					<label asp-for="ShortName" class="col-md-2 control-label">Please fill the Name:</label>
					<input asp-for="ShortName" type="text" class="form-control" name="ShortName">
					<span asp-validation-for="ShortName" class="text-danger"></span>
				</p>
			</div>
		</div>
			<p>
				<label asp-for="Description" class="col-md-2 control-label">Please fill the the Description:</label>
				<input asp-for="Description" type="text" class="form-control" name="Description">
				<span asp-validation-for="Description" class="text-danger"></span>
			</p>
		<p>
			Now editing @Model.TaskId
		</p>
		<p><input type="submit" class="btn btn-warning" role="button" value="Save item #@Model.TaskId">
		</p>
	</form>
</div>
</body>
</html>