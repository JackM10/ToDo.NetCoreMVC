@using ToDoNetCore.Models
@model ToDoNetCore.Models.ToDoModel

@{
	Layout = null;
}

<!DOCTYPE html>

@Html.ValidationMessage("ShortName", "", new {@class = "text-danger" })
<html>
<head>
	<meta name="viewport" content="width-device-width" />
	<title>.NET Core MVC - Edit</title>
	<link rel="stylesheet" href="~/css/site.css" />
	<link rel="stylesheet" href="~/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/bootstrap-theme.min.css" />
	<script src="~/js/jquery-1.11.3.min.js"></script>
	<script src="~/js/jquery.validate.min.js"></script>
	<script src="~/js/jquery.validate.unobtrusive.min.js"></script>

</head>
<body>
<div>
	<form method="post">  @*asp-action="Edit"*@
		<div class="form-horizontal">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<p>
					<label asp-for="ShortName" class="col-md-2 control-label">Please fill the Name:</label>
					<input asp-for="ShortName" type="text" class="form-control" value="@ViewBag.EntityName" name="editedName">
					<span asp-validation-for="ShortName" class="text-danger"></span>
				</p>
			</div>
		</div>
			<p>
				<label asp-for="Description" class="col-md-2 control-label">Please fill the the Description:</label>
				<input asp-for="Description" type="text" class="form-control" value="@ViewBag.EntityDescr" name="editedDescr">
				<span asp-validation-for="Description" class="text-danger"></span>
			</p>
			<p>
				Now editing @ViewBag.EntityID element
			</p>
		<p><input type="submit" class="btn btn-warning" role="button" value="Save item #@ViewBag.entityID">
		</p>
	</form>
</div>
</body>
</html>