@model List<ToDoNetCore.Models.ToDoModel>

@{
		Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
	<title>Item #@ViewBag.EntityIdToView</title>
	<link rel="stylesheet" href="~/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/bootstrap-theme.min.css" />
	<script src="~/js/jquery-1.11.3.min.js"></script>
	<script src="~/js/jquery-ui.min.js"></script>
	<script src="~/js/ViewOneItemCustomScript.js"></script>
</head>
<body>
<div>
	<form asp-action="List">
		<div class="form-horizontal">
			<div class="form-group">
				<div class="col-sm-2 control-label">
					Item ID:
				</div>
					<div class="col-sm-10 control-label">
						<input type="text" class="form-control" placeholder="@ViewBag.EntityIdToView" readonly />
					</div>
			</div>
			<div class="form-group">
					<div class="col-sm-2 control-label">
						Item Name:
					</div>
					<div class="col-sm-10 control-label">
						<input type="text" class="form-control" placeholder="@ViewBag.EntityNameToView" readonly />
					</div>
			</div>
			<div class="form-group">
					<div class="col-sm-2 control-label">
						Item Description:
					</div>
					<div class="col-sm-10 control-label">
						<input type="text" class="form-control" placeholder="@ViewBag.EntityDescrToView" readonly />
					</div>
			</div>
		</div>
			<div class="form-group">
				<p>
					<input type="submit" class="btn btn-success" role="button" value="Back to the List" />
					<a class="btn btn-dark" id="ajaxBtn">SPA</a>
				</p>
			</div>
</form>
</div>
</body>
</html>